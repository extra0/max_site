header.header
	// видео блок
	.header__video
		video.slider__list-video-player(loop autoplay muted poster="img/main-bg.jpg")
			source(src="video/video2.mp4" type="video/mp4")
			source(src="video/video2.webm" type="video/webm")
			source(src="video/video2.ogg" type="video/ogg")
	// / видео блок
	.container
		.row
			.col-sm-2
				// лого
				a.header__logo(href="/")
					img(src="img/logo.png" alt="Site Logo")
				// / лого
			.col-sm-8
				// меню
				.header__menu-block
					ul.header__menu-list
						each item in menu
							li.header__menu-item
								a.header__menu-link(href="#!") #{item}
				// / меню
			.col-sm-2
				.header__info
					// холдер телефона
					a.header__info-phone.js-phone-holder(href="tel:+74999122505") +7 (499) 912-25-05
					// / холдер телефона
					// блок с триггерами для телефона
					.header__info-trigger-block
						a.header__info-trigger.header__info-trigger--msk.js-phone-trigger.active(href="javascript:void(0)" data-phone="+7 (499) 912-25-05") Москва
						a.header__info-trigger.header__info-trigger--ods.js-phone-trigger(href="javascript:void(0)" data-phone="+38 (050) 912-25-05") Одесса
					// / блок с триггерами для телефона
		.row
			.col-sm-12
				// текстовый блок
				.header__block-text
					p.header__title Делаем крутые сайты и мобильные приложения
					p.header__text Знаем все подводные камни и съели всех собак
				// / текстовый блок